{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}

{% block title %}<span class="text-muted">{{'提示'|trans}}</span>{% endblock %}

{% block body %}
	{% if not classroom %}
		<div style="height: 50px;text-align: center;">
	        <p style="line-height: 50px;">
	        	{{'课程已从%name%中移除'|trans({'%name%':setting("classroom.name")|default('班级'|trans)})}}
	        </p>
	    </div>
	{% else %}
	    <div style="height: 50px;text-align: center;">
	        <p style="line-height: 50px;">
	        {{'还不是%name%成员'|trans({'%name%':setting('classroom.name')|default('班级'|trans)})}},{{'请先'|trans}}<a href="{{ path('classroom_show', {id:classroom.id}) }}">{{'加入%name%'|trans({'%name%':setting('classroom.name')|default('班级'|trans)})}}</a>
	        </p>
	    </div>
	{% endif %}
   
{% endblock %}

{% block footer %}
  <button type="button" class="btn btn-primary" data-dismiss="modal">{{'关闭'|trans}}</button>
{% endblock %}