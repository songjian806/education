{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}

{% set modal_class = 'modal-lg' %}

{% set hide_footer = true %}

{% block title %}{{'课程信息'|trans}}{% endblock %}

{% block body %}

<dl class="course-modal-infos">
  <dt>{{'简介'|trans}}</dt>
  <dd>{{ course.about|raw }}</dd>

  {% if category %}
  <dt>{{'分类'|trans}}</dt>
  <dd>
    <a href="{{ path('course_explore', {category:category.code|default(category.id)}) }}" target="_blank">{{ category.name }}</a>
  </dd>
  {% endif %}

  {% if course.tags %}
    <dt>{{'标签'|trans}}</dt>
    <dd>
      <ul class="list-inline">
        {% for tag in tags %}
          <li><a href="{{ path('tag_show', {name:tag.name}) }}">{{ tag.name }}</a></li>
        {% else %}
          <li>{{'暂无标签'|trans}}</li>
        {% endfor %}
      </ul>
    </dd>
  {% endif %}

  {% if course.goals %}
    <dt>{{'课程目标'|trans}}</dt>
    <dd>
      <ul>
        {% for goal in course.goals %}
          <li>{{ goal }}</li>
        {% endfor %}
      </ul>
    </dd>
  {% endif %}

  {% if course.audiences %}
    <dt>{{'适合人群'|trans}}</dt>
    <dd>
      <ul>
        {% for audience in course.audiences %}
          <li>{{ audience }}</li>
        {% endfor %}
      </ul>
    </dd>
  {% endif %}
</dl>
{% endblock %}