{% extends 'TopxiaWebBundle:Search:cloud-search.html.twig' %}

{% block content %}

  <div class="row">
    <div class="col-md-8">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">{{'搜索结果'|trans}}</h3>
        </div>
        <div class="panel-body color-gray">
         {{errorMessage|default('')}}
        </div>
      </div>
    </div>
    <div class="col-md-4">
      {% if type %}
          {% include 'TopxiaWebBundle:Search:search-hot-' ~ type|lower ~ '.html.twig' %}
      {% else %}
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">{{'常用关键词'|trans}}</h3>
        </div>
        <div class="panel-body">
        </div>
      </div>
      {% endif %}
    </div>
  </div>

{% endblock %}