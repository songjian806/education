{% if item.type == 'unit' %}
  <li class="section">
    <span class="title">
    {% if setting('course.custom_chapter_enabled')|default(true) %} 
      {{'第%number%'|trans({'%number%': item.number })}} 
      {% if setting('default.part_name') %}
       {{ setting('default.part_name')|default('节'|trans) }}
      {% else %}
        {{'节'|trans}}
      {% endif %}：
    {% endif  %} 
    {{ item.title }}
    </span>
  </li>
{% else %}
  <li class="chapter clearfix">
    <i class="es-icon es-icon-toc"></i>
    <span class="title">
      {% if setting('course.custom_chapter_enabled')|default(true) %} 
        {{'第%number%'|trans({'%number%': item.number })}} 
        {% if setting('default.chapter_name') %}
          {{ setting('default.chapter_name')|default('章'|trans) }}
        {% else %}
          {{'章'|trans}}
        {% endif %}：
      {% endif %}
        {{ item.title }}
      </span>
    </span>
    <span class="period-show"><i class="es-icon es-icon-remove"></i></span>
  </li>
{% endif %}