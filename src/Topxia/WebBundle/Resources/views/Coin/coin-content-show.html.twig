{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% block title %}{{setting('coin.coin_name')}}{{'说明'|trans}} - {{ parent() }}{% endblock %}
{% block description %}{{ coinSetting.coin_content|plain_text(100) }}{% endblock %}


{% set bodyClass = 'coin-detail-page' %}
{% block content %}
<div class="es-section">
  <div class="section-header"><h1>{{'%coin_name%说明'|trans({'%coin_name%': setting('coin.coin_name')|default('虚拟币'|trans)})}}</h1></div>

  {% if coinSetting.coin_content %}
  	{{ coinSetting.coin_content|raw }}
  {% else %}
    <div class="empty">{{'当前页面尚未编辑内容，请在管理后台编辑。'|trans}}</div>
  {% endif %}
</div>
{% endblock %}