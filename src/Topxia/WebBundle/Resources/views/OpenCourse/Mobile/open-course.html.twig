{% block content %}
  {{ render(controller('TopxiaWebBundle:OpenCourse:header',{request:app.request, course:course, lessonId:lessonId|default(null)})) }}
  {% set recommendCourses = data('RecommendOpenCourses',{courseId:course.id,count:5}) %}
  {% if recommendCourses %}
    <div class="panel panel-default open-course-panel">
      <div class="panel-heading">
        推荐课程
      </div>
      <div class="panel-body">
        {% include 'TopxiaWebBundle:OpenCourse:Mobile/recommend-course-list.html.twig' with {recommendCourses: recommendCourses} %}
      </div>
    </div>
  {% endif %}
  {% if course.about %}
    <div class="open-course-detail">
      <div class="panel panel-default open-course-panel ">
        <div class="panel-heading">
          课程介绍
        </div>
        <div class="panel-body open-course-intro">
          {{ course.about|raw }}
        </div>
      </div>
    </div>
  {% endif %}
  {{ render(controller('TopxiaWebBundle:OpenCourse:comment',{request:app.request,courseId:course.id, as:app.request.get('as')|default('')})) }}

{% endblock %}
