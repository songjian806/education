{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% block title %}{{'重设密码'|trans}} - {{ parent() }}{% endblock %}

{% block content %}
<div class="row row-6">
  <div class="col-md-6 col-md-offset-3 ptl">
    <div class="panel panel-default panel-page">
      <div class="panel-heading"><h2>{{'重设密码'|trans}}</h2></div>
      <p>
        {{'请到'|trans}} <span class="text-success">{{ user.email }}</span> {{'查阅来自%site.name%的邮件, 从邮件重设你的密码。'|trans({'%site.name%': setting('site.name')})}}
      </p>
      <p>
        <a class="btn btn-primary" href="{{ emailLoginUrl }}" target="_blank">{{'登录邮箱查收邮件'|trans}}</a>
      </p>
    </div><!-- /panel -->
  </div>
</div>

{% endblock %}