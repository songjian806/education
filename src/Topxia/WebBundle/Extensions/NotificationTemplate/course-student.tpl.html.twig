<li class="media">
  <div class="pull-left">
    <span class="glyphicon glyphicon-volume-down media-object"></span>
  </div>
  <div class="media-body">
    <div class="notification-body">
      {% set data = notification.content %}

      {% if data.type == 'create' %}
          {{'您被'|trans}}
          <a href="{{ path('user_show', {id:data.userId}) }}" target='_blank'>
            <strong>{{data.userName}}</strong>
          </a>
          {{'加入课程'|trans}}
          <a href="{{ path('course_show', {id:data.courseId}) }}" target='_blank'>
             <strong>{{data.courseTitle}}</strong>
          </a>
          {{'成为正式学员'|trans}}
      {% elseif data.type == 'remove'%}
          {{'您被'|trans}}
          <a href="{{ path('user_show', {id:data.userId}) }}" target='_blank'>
            <strong>{{data.userName}}</strong>
          </a>
          {{'移出%classroom%'|trans({'%classroom%':setting("classroom.name")|default('班级'|trans)})}}
          <a href="{{ path('course_show', {id:data.courseId}) }}" target='_blank'>
             <strong>{{data.courseTitle}}</strong>
          </a>
      {% endif %}
    </div>
    <div class="notification-footer">
     {{ notification.createdTime|date_format }}  
    </div>
  </div>
</li>
