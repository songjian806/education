<li class="media">
  <div class="pull-left">
    <span class="glyphicon glyphicon-volume-down media-object"></span>
  </div>
  <div class="media-body">
    <div class="notification-body">
      {% set data = notification.content %}
      {{'您的'|trans}}{% if data.threadType == 'question' %}{{'问题'|trans}}{% else %}{{'话题'|trans}}{% endif %}
      <a href="{{ path('course_thread_show', {courseId:data.courseId, threadId:data.threadId}) }}#post-{{ data.postId }}"  target="_blank"><strong>{{ data.threadTitle|purify_html  }}</strong></a> {{'有了'|trans}}<strong>{{ data.postUserNickname }}</strong>{{'的新回复。'|trans}}
    </div>
    <div class="notification-footer">
     {{ notification.createdTime|date_format }}  
    </div>
  </div>
</li>