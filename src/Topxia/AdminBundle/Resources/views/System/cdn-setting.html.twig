{% extends 'TopxiaAdminBundle::layout.html.twig' %}

{% set menu = 'admin_setting_message' %}

{% block main %}

<div class="page-header"><h1>CDN{{'设置'|trans}}</h1></div>

{{ web_macro.flash_messages() }}

<form class="form-horizontal" id="cdn-form" method="post">
  
  <div class="form-group">
    <label class="col-md-2 control-label">{{'状态'|trans}}</label>
    <div class="col-md-8 controls radios">
      {{ radios('enabled', {1:'启用'|trans, 0:'关闭'|trans}, cdn.enabled) }}
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 control-label">URL</label>
    <div class="col-md-8 controls">
      <input type="text" name="defaultUrl" class="form-control" value="{{ cdn.defaultUrl|default('') }}">
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 control-label">USERURL</label>
    <div class="col-md-8 controls">
      <input type="text" name="userUrl" class="form-control" value="{{ cdn.userUrl|default('') }}" placeholder='不填将默认是URL'>
  
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 control-label">CONTENTURL</label>
    <div class="col-md-8 controls">
      <input type="text" name="contentUrl" class="form-control" value="{{ cdn.contentUrl|default('') }}" placeholder='不填将默认是URL'>
    </div>
  </div>

  <div class="form-group">
    <div class="controls col-md-offset-2 col-md-8">
      <button type="submit" class="btn btn-primary">{{'提交'|trans}}</button>
    </div>
  </div>

  <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">

</form>

{% endblock %}