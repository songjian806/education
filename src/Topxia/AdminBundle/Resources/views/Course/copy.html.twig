{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}

{% set modalSize = 'large' %}

{% block title %}{{'课程复制'|trans}}{% endblock %}

{% block body %}

 <form id="course-copy-form" class="form-horizontal" method="post" action="{{ path('admin_course_coping',{id:course.id})}}">

          <div class="row form-group">
            <div class="col-md-3 control-label">
              <label for="course_title" >{{'课程新标题'|trans}}</label>
            </div>
            <div class="col-md-8 controls">
              <input type="text" id="course_title" name="title"  class="form-control"  value="{{course.title}}">
            </div>
          </div>

          <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">

</form>
{% endblock %}

{% block footer %}
  <button id="course-copy-btn" data-submiting-text="{{'正在复制'|trans}}" type="submit" class="btn btn-primary pull-right" data-toggle="form-submit" data-target="#course-copy-form">{{'复制'|trans}}</button>
  <button type="button" class="btn btn-link pull-right" data-dismiss="modal">{{'取消'|trans}}</button>
  <script>app.load('course/copy')</script>
{% endblock %}


