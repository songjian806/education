<div class="page-header"><h1>{{'实名认证'|trans}}</h1>
</div>
<ul class="nav nav-tabs">
  <li {% if submenu == 'approving' %} class="active" {% endif %} >
    <a  href="{{ path('admin_approval_approving') }}">{{'审核中'|trans}}</a>
  </li>
  <li {% if submenu == 'approved' %} class="active" {% endif %} >
    <a  href="{{ path('admin_approval_approved') }}">{{'审核成功'|trans}}</a>
  </li>
</ul>
<br>

<form id="user-search-form" class="form-inline well well-sm" action="" method="get" novalidate>  
  <div class="form-group">
    <select id="keywordType" class="form-control" name="keywordType">
          {% set options = {'':'--关键词类型--'|trans,'nickname':'用户名'|trans,'email':'邮件地址'|trans} %}
          {{ select_options(options, app.request.get('keywordType')) }}
    </select>

  </div>

  <div class="form-group">
    <input type="text" id="keyword" name="keyword" class="form-control" value="{{ app.request.query.get('keyword') }}" placeholder="{{'关键词'|trans}}">
  </div>

  <button class="btn btn-primary">{{'搜索'|trans}}</button>

</form>