<ul class="materials-nav materials-tags js-tags-container clearfix">
  <li class="all active"><span>{{ '标签：'|trans }}</span></li>
  {% for tag in tags %}
    <li class="js-tag-btn item">
      <a class="label label-default active-show" href="javascript:;" data-value="{{ tag.id }}" >{{ tag.name }}</a>
      <a class="label label-primary active-hide" href="javascript:;" data-value="{{ tag.id }}" >{{ tag.name }}</a>
    </li>
  {% endfor %}
    <input type="hidden" name="tags">
</ul>
