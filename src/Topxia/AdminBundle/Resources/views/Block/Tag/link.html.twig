<div class="form-group">
  <label class="control-label col-md-3 col-xs-3" for="data[{{ code }}][{{ dataId }}][value]">{{'链接文本'|trans}}</label>
  <div class="col-md-9 col-xs-9">
    <input class="form-control js-label-input" type="text" name="data[{{ code }}][{{ dataId }}][value]" value="{{ data.value|default('') }}">
  </div>
 </div>
 <div class="form-group">
  <label class="control-label col-md-3 col-xs-3" for="data[{{ code }}][{{ dataId }}][href]">{{'链接地址'|trans}}</label>
  <div class="col-md-9 col-xs-9">
    <input class="form-control" type="text" name="data[{{ code }}][{{ dataId }}][href]" value="{{ data.href|default('') }}" placeholder="http://" >
  </div>
 </div>
 <div class="form-group">
  <label class="control-label col-md-3 col-xs-3">{{'打开新窗口'|trans}}</label>
  <label class="checkbox-inline"><input type="radio" data-role="radio-yes" name="data[{{ code }}][{{ dataId }}][target]" value="_blank" {% if data.target|default('_self') == '_blank' %} checked="checked" {% endif %}> {{'是'|trans}}</label>
  <label class="checkbox-inline"><input type="radio" data-role="radio-no" name="data[{{ code }}][{{ dataId }}][target]" value="_self" {% if data.target|default('_self') == '_self' %} checked="checked" {% endif %}> {{'否'|trans}}</label>
 </div>
