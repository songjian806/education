<form class="form-horizontal" id="info-form">
  <div class="form-group">
    <label for="name" class="col-md-2 control-label">{{'标题'|trans}}</label>
    <div class="col-md-6" style="padding:6px;">
      {{ material.filename }}
    </div>
  </div>
  <div class="form-group">
    <label for="tags" class="col-md-2 control-label">{{'标签'|trans}}</label>
    <div class="col-md-6 controls" style="padding:7px;">
        {{ material.tags|default('暂无'|trans)|join('  ') }}
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-2 control-label">{{'简介'|trans}}</label>
    <div class="col-md-6 controls" style="padding:6px;">
      {{ material.description|default('暂无'|trans) }}
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <a class="btn btn-primary js-back">{{'返回列表'|trans}}</a>
    </div>
  </div>
</form>