{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}

{% block title %}服务器详细信息{% endblock %}

{% block body %}

<table class="table table-striped table-condenseda table-bordered">
  <tr>
    <th width="25%">服务器名称</th>
    <td width="75%">
      <a class="pull-right" href="{{ server.serverUrl }}" target="_blank">去看看</a>
      {{ server.serverName }}
    </td>
  </tr>

  <tr>
    <th>站点识别号</th>
    <td>{{ server.clientId }}</td>
  </tr>

  <tr>
    <th>站点密钥</th>
    <td>
      {{ server.secretKey }}
    </td>
  </tr>

  <tr>
    <th>创建时间</th>
    <td>
      {{ server.createdTime|date('Y-n-d H:i:s') }}
    </td>
  </tr>

  <tr>
    <th>是否禁止登录</th>
    <td>
      {% if server.locked %}
        是
      {% else %}
        否
      {% endif %}
    </td>
  </tr>

</table>

{% endblock %}

{% block footer %}
  <button type="button" class="btn btn-primary" data-dismiss="modal">关闭</button>
{% endblock %}