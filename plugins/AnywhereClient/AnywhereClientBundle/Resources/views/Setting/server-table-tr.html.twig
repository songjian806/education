<tr id="server-table-tr-{{ server.id }}">
  <td>
    <a href="{{ server.serverUrl }}" target="_blank">{{ server.serverName }}</a>
    {% if server.locked %}
      <label class="label label-danger">禁</label>
    {% endif %}
  </td>

  <td>
   <p class="ellipsis">{{ server.clientId }}</p>
  </td>

  <td>
    <p class="ellipsis">{{ server.secretKey }}</p>
  </td>
  <td>
    <span class="text-sm">{{ server.createdTime|date('Y-n-d H:i:s') }}</span>
  </td>
  <td>
    <div class="btn-group">
      <a href="#modal" data-toggle="modal" data-url="{{ path('admin_anywhere_client_show', {id:server.id}) }}" data-url="" class="btn btn-default btn-sm">查看</a>
      <a href="#" type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li><a href="#modal" data-toggle="modal" data-url="{{ path('admin_anywhere_client_edit', {id:server.id}) }}">编辑</a></li>
        <li><a href="javascript:;" class="js-delete-btn" data-url="{{ path('admin_anywhere_client_delete', {id:server.id}) }}">删除</a></li>
      </ul>
    </div>
  </td>
</tr>
